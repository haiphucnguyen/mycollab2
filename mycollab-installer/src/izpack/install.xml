<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>@{project.name}</appname>
        <appversion>1.4 beta 666</appversion>
        <authors>
            <author name="${user.name}" email="jpz@superman.org"/>
            <author name="Hidden Man" email="hidden@hisdomain.com"/>
        </authors>
        <url>http://www.mycollab.com/</url>
    </info>

    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no"/>

    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
    </resources>
    <jar src="jar/MyCollabInstallerListener.jar" stage="both"/>
    <jar src="jar/MyCollabUninstallerListener.jar" stage="both"/>
    <listeners>
        <listener installer="MyCollabInstallerListener" stage="install" />
        <listener uninstaller="MyCollabUninstallerListener" stage="uninstall" /> 
    </listeners>   

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <!--  <panel classname="com.company.izpack.panels.MyHelloPanel"/>-->
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    <executable targetfile="$INSTALL_PATH/mycollab-web/bin/mycollab-daemon.jar" type="jar" stage="uninstall">
        <args>
            <arg>uninstall</arg>
        </args>
    </executable>
    <executable targetfile="$INSTALL_PATH/mycollab-web/bin/mycollab-daemon.jar" type="jar" stage="postinstall">
        <args>
            <arg>install</arg>
        </args>
    </executable>
<!-- 
    <jar src="dependency/plexus-utils.jar"/>
    <jar src="../izpack-maven-plugin-example.jar"/>
-->
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <fileset dir="mycollab-web" targetdir="$INSTALL_PATH/mycollab-web" />
            <!-- The file will be parsed -->
        </pack>
        
    </packs>

</installation>