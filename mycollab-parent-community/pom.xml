        </repository>
        <repository>
            <id>repository.springsource.milestone</id>
            <name>SpringSource Milestone Repository</name>
            <url>http://repo.springsource.org/milestone</url>
        </repository>
        <repository>
            <id>mycollab-repo</id>
            <url>https://raw.githubusercontent.com/esofthead/mycollab-maven-repo/master</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>mycollab-plugin-repo</id>
            <url>https://raw.githubusercontent.com/esofthead/mycollab-maven-repo/master</url>
        </pluginRepository>
    </pluginRepositories>
</project>