<?xml version="1.0" encoding="UTF-8"?>
<project name="MyCollab" xmlns="http://maven.apache.org/DECORATION/1.3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">
    <bannerLeft>
        <!-- Reflow Maven Skin, but with "Reflow" highlighted -->
        <name><![CDATA[
      <h1>Project, CRM, Document and more</h1>
      ]]>
    </name>
        <href>http://esofthead.github.io/mycollab</href>
    </bannerLeft>

    <publishDate position="bottom" format="yyyy-MM-dd" />
    <version position="bottom" />
    <googleAnalyticsAccountId>UA-46116533-1</googleAnalyticsAccountId>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.2-SNAPSHOT</version>
    </skin>
    <custom>
        <reflowSkin>
            <!-- Make this to 'false' for local development, i.e. file:// 
                URLs -->
            <protocolRelativeURLs>false</protocolRelativeURLs>
            <smoothScroll>true</smoothScroll>
            <theme>bootswatch-united</theme>
            <highlightJs>true</highlightJs>
            <highlightJsTheme>github</highlightJsTheme>
            <absoluteResourceURL>http://esofthead.github.io/mycollab
            </absoluteResourceURL>
            <brand>
                <!-- Brand text in top-left part of the site -->
                <name>
          <![CDATA[
          <img src="https://farm4.staticflickr.com/3949/15597959102_25ccb23d20_o.png" alt="Logo"/>
          ]]>
                </name>
                <href>http://esofthead.github.io/mycollab
                </href>
            </brand>
            <slogan>A must tool for small or mid size of any distributed
                team
                <![CDATA[<a href="http://www.gnu.org/copyleft/gpl.html" target="_blank"><img src="http://img.shields.io/badge/License-GPL-orange.svg"/></a> <a href="https://travis-ci.org/esofthead/mycollab" target="_blank"><img src="https://travis-ci.org/esofthead/mycollab.svg?branch=master"/></a> <a href="https://www.openhub.net/p/mycollab"  target="_blank"><img src="https://www.openhub.net/p/mycollab/widgets/project_thin_badge.gif"/></a>]]>
            </slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <!-- Use Table of Contents at the top of the page (max 6 elements) -->
            <toc>top</toc>
            <tocTopMax>6</tocTopMax>
            <!-- Include the documentation and tools in the top navigation 
                (in addition to links) -->
            <topNav>www.mycollab.com|Documentation|Blog|Contact Us</topNav>
            <!-- Split menus in the bottom navigation -->
            <bottomNav maxSpan="9">
                <column>Main</column>
                <column>Download</column>
                <column>Documentation</column>
                <column>Contribute</column>
            </bottomNav>
            <bottomDescription>
        <![CDATA[
          MyCollab is the stable and high performance business platform which host useful extensions to daily operations of teams, companies such as Project, CRM, Document Management and more.
        ]]>
            </bottomDescription>
            <pages>
                <index project="mycollab-doc">
                    <!-- Override the title -->
                    <titleTemplate>MyCollab</titleTemplate>
                    <!-- no breadcrumbs on the main index page -->
                    <breadcrumbs>false</breadcrumbs>
                    <!-- no ToC on the main index page -->
                    <toc>false</toc>
                    <markPageHeader>false</markPageHeader>
                    <sections>
                        <body />
                        <sidebar />
                        <columns>1</columns>
                        <body />
                        <sidebar />
                    </sections>
                </index>
                <contribute>
                    <breadcrumbs>false</breadcrumbs>
                </contribute>
                <!-- Disable source highlighting for Maven reports -->
                <source-repository>
                    <highlightJs>false</highlightJs>
                </source-repository>
                <issue-tracking>
                    <highlightJs>false</highlightJs>
                    <toc>false</toc>
                </issue-tracking>
                <license>
                    <highlightJs>false</highlightJs>
                    <toc>false</toc>
                </license>
                <!-- Disable ToC for some Maven reports -->
                <project-info>
                    <toc>false</toc>
                </project-info>
                <github-report>
                    <toc>false</toc>
                </github-report>
                <dependencies>
                    <tocTopMax>4</tocTopMax>
                </dependencies>
            </pages>
        </reflowSkin>
    </custom>

    <body>
        <!-- Add a rel to Google profile for all pages -->
        <head>
            <link rel="author" href="https://twitter.com/mycollabdotcom" />
        </head>

        <links>
            <item name="www.mycollab.com" href="http://www.mycollab.com" />
            <item name="Screenshots" href="screenshots.html" />
            <item name="Download" href="download.html" />
        </links>

        <breadcrumbs>
            <item name="Home" href="/" />
        </breadcrumbs>

        <menu name="Main" inherit="top">
            <item name="Home" href="./" />
            <item name="Editions" href="editions.html" />
            <item name="Blog" href="http://www.mycollab.com/blog/" />
            <item name="Contact Us" href="https://www.mycollab.com/support" />
            <item name="Sitemap" href="sitemap.html" />
        </menu>
        <menu name="Download" inherit="top">
            <item name="Download" href="download.html" />
            <item name="License" href="license.html" />
            <item name="Third Parties Licenses" href="third-parties.html"/>
        </menu>
        <menu name="Documentation" inherit="bottom">
            <item name="Installation" href="installation.html" />
            <item name="Administrator Guideline" href="administrator.html" />
            <item name="Development Guideline" href="development.html" />
        </menu>
        <menu name="Contribute" inherit="top">
            <item name="Contribute" href="contribute.html" />
            <item name="Issues"
                href="https://github.com/esofthead/mycollab/issues" />
            <item name="Fork on GitHub" href="https://github.com/esofthead/mycollab" />
        </menu>
    </body>
</project>