<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Spring DAO -->
    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="changeLogDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ChangeLogMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="changeLogExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ChangeLogMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="messageDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.MessageMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="messageExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.MessageMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectMonitorDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ProjectMonitorMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="permissionDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.PermissionMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="problemDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.ProblemMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="problemExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ProblemMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.ProjectMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ProjectMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="resourceDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ResourceMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="resourceExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.ResourceMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="riskDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.RiskMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="riskExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.RiskMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectRoleDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.RoleMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectRoleExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.RoleMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectTaskDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.TaskMapper" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="projectTaskExtDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface" value="com.esofthead.mycollab.module.project.dao.TaskMapperExt" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperFactoryBean" id="taskResourceDAO">
        <property name="sqlSessionTemplate" ref="sqlMapClient" />
        <property name="mapperInterface"
            value="com.esofthead.mycollab.module.project.dao.TaskResourceMapper" />
    </bean>

    <!-- Spring Service -->
    <bean id="changeLogService"
        class="com.esofthead.mycollab.module.project.service.ibatis.ChangeLogServiceImpl">
        <property name="daoObj" ref="changeLogDAO" />
        <property name="changeLogExtDAO" ref="changeLogExtDAO" />
    </bean>

    <bean id="messageService"
        class="com.esofthead.mycollab.module.project.service.ibatis.MessageServiceImpl">
        <property name="daoObj" ref="messageDAO" />
        <property name="messageExtDAO" ref="messageExtDAO" />
        <property name="attachmentService" ref="attachmentService" />
        <property name="changeLogService" ref="changeLogService" />
    </bean>

    <bean id="projectMonitorService"
        class="com.esofthead.mycollab.module.project.service.ibatis.ProjectMonitorServiceImpl">
        <property name="daoObj" ref="projectMonitorDAO" />
    </bean>

    <bean id="permissionService"
        class="com.esofthead.mycollab.module.project.service.ibatis.PermissionServiceImpl">
        <property name="daoObj" ref="permissionDAO" />
    </bean>

    <bean id="problemService"
        class="com.esofthead.mycollab.module.project.service.ibatis.ProblemServiceImpl">
        <property name="daoObj" ref="problemDAO" />
        <property name="problemExtDAO" ref="problemExtDAO" />
        <property name="changeLogService" ref="changeLogService" />
    </bean>

    <bean id="projectService"
        class="com.esofthead.mycollab.module.project.service.ibatis.ProjectServiceImpl">
        <property name="daoObj" ref="projectDAO" />
        <property name="permissionDAO" ref="permissionDAO" />
        <property name="projectExtDAO" ref="projectExtDAO" />
        <property name="messageDispatcher" ref="messageDispatcher" />
    </bean>

    <bean id="resourceService"
        class="com.esofthead.mycollab.module.project.service.ibatis.ResourceServiceImpl">
        <property name="daoObj" ref="resourceDAO" />
        <property name="resourceExtDAO" ref="resourceExtDAO" />
        <property name="permissionService" ref="permissionService" />
        <property name="changeLogService" ref="changeLogService" />
    </bean>

    <bean id="riskService"
        class="com.esofthead.mycollab.module.project.service.ibatis.RiskServiceImpl">
        <property name="daoObj" ref="riskDAO" />
        <property name="riskExtDAO" ref="riskExtDAO" />
        <property name="changeLogService" ref="changeLogService" />
    </bean>

    <bean id="roleService"
        class="com.esofthead.mycollab.module.project.service.ibatis.RoleServiceImpl">
        <property name="daoObj" ref="projectRoleDAO" />
        <property name="roleExtDAO" ref="projectRoleExtDAO" />
    </bean>

    <bean id="taskService"
        class="com.esofthead.mycollab.module.project.service.ibatis.TaskServiceImpl">
        <property name="daoObj" ref="projectTaskDAO" />
        <property name="taskExtDAO" ref="projectTaskExtDAO" />
        <property name="projectDAO" ref="projectDAO" />
        <property name="resourceDAO" ref="resourceDAO" />
        <property name="taskResourceDAO" ref="taskResourceDAO" />
    </bean>

</beans>