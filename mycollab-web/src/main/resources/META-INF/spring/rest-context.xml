<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="restletComponent" class="org.restlet.ext.spring.SpringComponent">
        <property name="defaultTarget" ref="restApp" />
    </bean>

    <bean id="restApp" class="com.esofthead.mycollab.rest.server.RestApp">
        <property name="inboundRoot" ref="restRouter" />
    </bean>

    <bean id="restRouter" class="org.restlet.ext.spring.SpringRouter">
        <property name="attachments">
            <map>
                <entry key="/signup">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="create"
                            bean="restUserResource" />
                    </bean>
                </entry>
                <entry key="/signin">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="create"
                            bean="restUserResource" />
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
</beans>
