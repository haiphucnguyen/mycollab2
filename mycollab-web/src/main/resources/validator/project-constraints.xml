<constraint-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping
	http://jboss.org/xml/ns/javax/validation/mapping/validation-mapping-1.0.xsd"
    xmlns="http://jboss.org/xml/ns/javax/validation/mapping">
    <default-package>com.esofthead.mycollab.module.project.domain</default-package>
    
     <bean class="Project" ignore-annotations="true" >
        <field name="name">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Name must not be null</message>
            </constraint>
        </field>
    </bean>
    
    <bean class="Message" ignore-annotations="true" >
        <field name="title">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Title must not be null</message>
            </constraint>
        </field>
    </bean>

    <bean class="Milestone" ignore-annotations="true" >
        <field name="name">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Name must not be null</message>
            </constraint>
        </field>
         <field name="owner">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Responsible user must not be null</message>
            </constraint>
        </field>
    </bean>
    
    <bean class="Task" ignore-annotations="true" >
        <field name="taskname">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Name must not be null</message>
            </constraint>
        </field>
    </bean>
    
    <bean class="TaskList" ignore-annotations="true" >
        <field name="name">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Name must not be null</message>
            </constraint>
        </field>
    </bean>
    
     <bean class="Risk" ignore-annotations="true" >
        <field name="riskname">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Name must not be null</message>
            </constraint>
        </field>
        <field name="description">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Description must not be null</message>
            </constraint>
        </field>
    </bean>
    
    <bean class="Problem" ignore-annotations="true" >
        <field name="issuename">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Name must not be null</message>
            </constraint>
        </field>
        <field name="description">
            <constraint annotation="javax.validation.constraints.NotNull">
                <message>Description must not be null</message>
            </constraint>
        </field>
    </bean>
</constraint-mappings>