<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context
        id="MySQL"
        targetRuntime="MyBatis3" >

        <jdbcConnection
            connectionURL="jdbc:mysql://localhost:3306/mycollab"
            driverClass="com.mysql.jdbc.Driver"
            password="esofthead321"
            userId="root" />

        <javaModelGenerator
            targetPackage="com.esofthead.mycollab.common.domain"
            targetProject="src/main/java" >

            <property
                name="rootClass"
                value="com.esofthead.mycollab.core.utils.ValuedBean" />
        </javaModelGenerator>

        <sqlMapGenerator
            targetPackage="."
            targetProject="src/main/resources/sqlMap/common" />

        <javaClientGenerator
            targetPackage="com.esofthead.mycollab.common.dao"
            targetProject="src/main/java"
            type="XMLMAPPER" >

            <property
                name="exampleMethodVisibility"
                value="public" />

            <property
                name="rootInterface"
                value="com.esofthead.mycollab.core.persistence.ICrudGenericDAO" />
        </javaClientGenerator>

        <table
            domainObjectName="Currency"
            schema="mycollab"
            tableName="s_currency" />

        <table
            domainObjectName="MonitorItem"
            schema="mycollab"
            tableName="m_monitor_item" />

        <table
            domainObjectName="ActivityStream"
            schema="mycollab"
            tableName="s_activitystream" />

        <table
            domainObjectName="Comment"
            schema="mycollab"
            tableName="m_comment" />
    </context>

</generatorConfiguration>