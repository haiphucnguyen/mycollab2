<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="MySQL" targetRuntime="MyBatis3">

        <plugin type="com.esofthead.mybatis.plugin.MyCollabModelFilePlugin" />

        <jdbcConnection connectionURL="jdbc:mysql://localhost:3306/mycollab_base"
                        driverClass="com.mysql.jdbc.Driver" password="esofthead321"
                        userId="root" />

        <javaModelGenerator
                targetPackage="com.esofthead.mycollab.module.support.domain"
                targetProject="src/main/java">

            <property name="rootClass"
                      value="com.esofthead.mycollab.core.arguments.ValuedBean" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="."
                         targetProject="src/main/resources/sqlMap/support" />

        <javaClientGenerator targetPackage="com.esofthead.mycollab.module.support.dao"
                             targetProject="src/main/java" type="XMLMAPPER">

            <property name="exampleMethodVisibility" value="public" />

            <property name="rootInterface"
                      value="com.esofthead.mycollab.core.persistence.ICrudGenericDAO" />
        </javaClientGenerator>

        <table domainObjectName="Testimonial" schema="mycollab_base"
               tableName="s_testimonial" />
        <table domainObjectName="CommunityLead" schema="mycollab_base"
               tableName="s_customer_lead" />
        <table domainObjectName="PremiumUser" schema="mycollab_base"
               tableName="s_premium_users" />
        <table domainObjectName="LiveInstance" schema="mycollab_base"
               tableName="s_live_instances" />
    </context>

</generatorConfiguration>