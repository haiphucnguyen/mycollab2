        <dependency>
            <groupId>com.esofthead.mycollab</groupId>
            <artifactId>mycollab-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.esofthead.mycollab</groupId>
            <artifactId>mycollab-api-impl</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.esofthead.mycollab</groupId>
            <artifactId>mycollab-reporting</artifactId>
            <version>1.0-SNAPSHOT</version>
